modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cargo", "file", "glibcLocales", "libiconv", "libxcrypt", "openssl", "pkg-config", "postgresql", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Resume Customizer"

[[workflows.workflow]]
name = "Resume Customizer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.runOnSave=false --server.allowRunOnSave=false"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45679
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port=5000", "--server.address=0.0.0.0", "--server.runOnSave=false", "--server.allowRunOnSave=false"]
